<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.transport.cw.mappers.BoardMapper">
    <insert id="insert_board" parameterType="com.transport.cw.domain.vos.BoardVO">
        INSERT INTO `board_tbl`
        VALUES(DEFAULT, #{boardType}, #{id}, #{title}, #{contents}, #{fileAddr}, DEFAULT)
    </insert>

    <select id="get_all_notice" resultType="com.transport.cw.domain.vos.BoardVO">
        SELECT * FROM `board_tbl` WHERE `boardType`='공지사항'
    </select>

    <select id="get_notice" resultType="com.transport.cw.domain.vos.BoardVO">
        SELECT * FROM `board_tbl` WHERE `boardType`='공지사항' AND `no` = #{no}
    </select>

    <update id="update_notice" parameterType="com.transport.cw.domain.vos.BoardVO">
        UPDATE `board_tbl` SET `boardType` = #{boardType},
        `title` = #{title},
        `contents` = #{contents},
        `fileAddr` = #{fileAddr},
        `writeDate` = DEFAULT
        WHERE `no` = #{no}
    </update>

    <delete id="delete_notice" parameterType="com.transport.cw.domain.vos.BoardVO">
        DELETE FROM `board_tbl` WHERE `no` = #{no}
    </delete>

    <!-- 페이징 -->
    <select id="find_all" parameterType="com.transport.cw.domain.dtos.PagingDTO"
            resultType="com.transport.cw.domain.vos.BoardVO">
        SELECT * FROM `board_tbl` WHERE `boardType`='공지사항'
        ORDER BY `no` DESC
        LIMIT #{pagination.limitStart}, #{recordSize}
    </select>
    <select id="count" resultType="int">
        SELECT COUNT(*) FROM `board_tbl` WHERE `boardType`='공지사항'
    </select>

</mapper>